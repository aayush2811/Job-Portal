<!DOCTYPE html>
<html lang="en">

<head>
	<title>Company Register</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Stylesheet -->
	<link rel="stylesheet" type="text/css" href="css/stylesheet.css">
	<!-- Bootstrap 5.3 link -->
	<link href="/js/bootstrap5.3/css/bootstrap.min.css" rel="stylesheet">
	<!-- Font-family -->
	<link href="/font/raleway/style.css" rel="stylesheet">
	<link href="/font/rubik/style.css" rel="stylesheet">
	<!-- Font-awesome link -->
	<link rel="stylesheet" type="text/css" href="/fonts/fontawesome/css/all.min.css">
	<link rel="stylesheet" href="css/cursor.css">
</head>

<body>
	<!-- header start here -->
	<div id="header"></div>
	<!-- header end here -->



	<!-- Navbar -->
	<%- include ('partials/navbar.ejs') %>
		<section class="profile_banner">
			<div class="container-fluid">
				<div class="row">
					<div class="col-sm-6 nearJob">
						<h1>Your dream Job</h1>
						<h2 class="text-red">Is Near to You</h2>
					</div>
				</div>
			</div>
		</section>
		<!-- /. profile_banner -->

		<section class="profileMain com-register">
			<div class="container-fluid">
				<div class="row">
					<div class="col-sm-3 pe-lg-5">
						<div class="card mb-2 border-0">
							<div class="jobImage">
								<div class="image-card">
									<img class="card-img-top" src="images/company-register.png" alt="Profile">
								</div>
							</div>
						</div>

						<div class="proLinks">
							<div class="d-grid">
								<a href="javascript:void(0);" class="btn btn-outline-danger mb-4">
									<i class="fa fa-cloud me-2" aria-hidden="true"></i> General Information
								</a>
							</div>
							<div class="d-grid">
								<a href="javascript:void(0);" class="btn btn-outline-danger mb-4">
									<i class="fa fa-user me-2" aria-hidden="true"></i> Company Address
								</a>
							</div>
							<div class="d-grid">
								<a href="javascript:void(0);" class="btn btn-outline-danger mb-4">
									<i class="fa fa-key me-2" aria-hidden="true"></i> Social Account
								</a>
							</div>
						</div>
					</div><!-- /. grid column -->
					<div class="col-sm-9 profile_right">
						<div class="border p-4 h-100">
							<form method="post" action="/company-register" enctype="multipart/form-data">
								<div class="pb-5">
									<h3>General Information

									</h3>
								</div>
								<div class="form-group row">
									<div class="col-sm-6">
										<input type="text" name="companyName" id="companyName" class="form-control"
											placeholder="Company Name" required>
									</div>
									<div class="col-sm-6">
										<input type="text" name="companyTag" id="companyTag" class="form-control"
											placeholder="Company Tagline" required>
									</div>
								</div>
								<div class="form-group row">
									<div class="col-sm-6">
										<input type="text" name="companyOwner" id="companyOwner" class="form-control"
											placeholder="Owner Name" required>
									</div>
									<div class="col-sm-6">
										<input type="text" name="companyLocation" id="companyLocation"
											class="form-control" placeholder="Location" required>
									</div>
								</div>
								<div class="form-group row">
									<div class="col-sm-6">
										<input type="email" name="companyEmail" id="companyEmail" class="form-control"
											placeholder="E-mail Address" required>
									</div>
									<div class="col-sm-6">
										<input type="number" name="companyPhone" id="companyPhone" class="form-control"
											placeholder="Phone Number" required>
									</div>
								</div>
								<div class="form-group row">
									<div class="col-sm-6">
										<input type="text" name="website" id="website" class="form-control"
											placeholder="Website" required>
									</div>
									<div class="col-sm-6">
										<div class="fileUpload">
											<label class="upload form-control">
												Company Logo
												<input name="companyLogo" id="uploadFile" type="file" required>
												<span class="chooseFile">Choose File</span>
											</label>
										</div>
									</div>
								</div>
								<div class="form-group row">
									<div class="col-sm-12">
										<textarea name="companyDetail" id="companyDetail" class="form-control"
											placeholder="Company Details" required></textarea>
									</div>

								</div>
								<div class="form-group row">
									<div class="col-sm-6">
										<input type="text" name="companyAddres" id="companyAddres" class="form-control"
											placeholder="Address" required>
									</div>
									<div class="col-sm-6">
										<div class="fileUpload">
											<label class="upload form-control">
												Upload Your Documents
												<input name="companyDocuments" id="uploadDocuments" type="file" multiple
													style="display: none;">
												<span class="chooseFile" id="documentNames">Choose Files</span>
											</label>
										</div>
									</div>
								</div>
								<div class="form-group mt-5">
									<div class="d-grid">
										<input type="submit" name="save" class="btn btn-danger rounded-0" id="save"
											value="Save & Next">
									</div>
								</div>
							</form>
						</div>
					</div>

				</div>
			</div>
        </section>
		<script>
			document.getElementById('uploadFile').addEventListener('change', function() {
				const file = this.files[0];
				if (file) {
					document.querySelector('.chooseFile').textContent = file.name;
				} else {
					document.querySelector('.chooseFile').textContent = 'Choose File';
				}
			});
			
			document.getElementById('uploadDocuments').addEventListener('change', function() {
				const fileList = this.files;
				const fileNames = [];
				for (let i = 0; i < fileList.length; i++) {
					fileNames.push(fileList[i].name);
				}
				document.getElementById('documentNames').textContent = fileNames.join(', ') || 'Choose Files';
			});
			</script>
			
			<!-- Js Links -->
			<script src="/js/bootstrap5.3/js/popper.min.js"></script>
			<script src="/js/jquery-3.6.0.min.js"></script>
			<script src="/js/bootstrap5.3/js/bootstrap.bundle.min.js"></script>
			<script src="/js/common.js"></script>
			<script src="js/cursor.js"></script>
</body>

</html>